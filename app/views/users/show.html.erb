<div class="row">
  <div class="col-md-8">
    <h1><%= @user.name %></h1>
    <h4>Bio:</h4>
    <% if @user.bio %>
      <p>
        <%= @user.bio %>
      </p>
    <% else %>
      <p>
        You don't have a bio yet.
      </p>
    <% end %>
    <% if @user == current_user %>
      <div id="post_form">
        <%= render 'shared/post_form' %>
      </div>
    <% end %>
    <% if @user.posts.any? %>
      <h4>Posts: (<%= @user.posts.count %>)</h4>
        <div id="user_posts">
          <ul class="posts">
            <%= render @posts %>
          </ul>
        </div>
    <% end %>
  </div>
</div>
